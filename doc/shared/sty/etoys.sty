% If a PDF file called 'cover.pdf' exists, use it as cover.
\newcommand{\insertcover}
{
	\IfFileExists{cover.pdf}{
	\includepdf[pages=-, fitpaper]{cover.pdf}
	\thispagestyle{empty}
	\cleardoublepage
	}
}

